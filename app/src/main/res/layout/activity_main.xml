<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/backgroundColor"
    tools:context="MainActivity"
    android:orientation="vertical">

    <!-- Calculator Screen = Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/backgroundCard"
        android:orientation="vertical">

        <!-- Mathematical Operations -->
        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:text=""/>

        <!-- Operations Results -->
        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="50sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/result"
            android:text=""/>

    </LinearLayout>

    <!-- Calculator Buttons -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <!-- Line number 01 : "C" "(" ")" "÷" -->
        <TableRow>
            <Button
                android:id="@+id/button_number7"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="7"/>

            <Button
                android:id="@+id/button_number8"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="8"/>

            <Button
                android:id="@+id/button_number9"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="9"/>

            <Button
                android:id="@+id/button_division"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="÷"/>
        </TableRow>

        <!-- Line number 02 : "7" "8" "9" "×" -->
        <TableRow>
            <Button
                android:id="@+id/button_number4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="4"/>

            <Button
                android:id="@+id/button_number5"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="5"/>

            <Button
                android:id="@+id/button_number6"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="6"/>

            <Button
                android:id="@+id/button_multiplication"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="×"/>
        </TableRow>

        <!-- Line number 03 : "4" "5" "6" "-" -->
        <TableRow>
            <Button
                android:id="@+id/button_number1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="1"/>

            <Button
                android:id="@+id/button_number2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="2"/>

            <Button
                android:id="@+id/button_number3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="3"/>

            <Button
                android:id="@+id/button_diminition"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="-"/>
        </TableRow>

        <!-- Line number 04 : "1" "2" "3" "+" -->
        <TableRow>
            <Button
                android:id="@+id/button_number0"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="0"/>

            <Button
                android:id="@+id/button_left"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="("/>

            <Button
                android:id="@+id/button_right"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text=")"/>

            <Button
                android:id="@+id/button_addition"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="+"/>
        </TableRow>

        <!-- Line number 05 : "0" "," "=" -->
        <TableRow>

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Cancel"
                android:layout_weight="1"
                android:text="C"/>

            <Button
                android:id="@+id/button_point"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text=","/>

            <Button
                android:id="@+id/button_equal"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="="/>

        </TableRow>

    </TableLayout>

</LinearLayout>